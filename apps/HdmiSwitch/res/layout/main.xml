<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent" android:padding="10dp">
  <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" android:paddingLeft="10dp">
    <ImageView android:id="@+id/hdmi_img" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/hdmi_img" />
    <TextView android:id="@+id/hdmi_state_str" android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="bottom" android:paddingLeft="10dp" android:textSize="16sp" android:text="@string/hdmi_state_str1" android:textStyle="bold" />
  </LinearLayout>
  <ListView android:id="@+id/listview" android:layout_width="fill_parent" android:layout_height="wrap_content" android:paddingTop="5dp" />
  <TextView android:id="@+id/hdmi_info_str" android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="bottom|center" android:paddingLeft="10dp" android:text="@string/hdmi_info_str1" android:textStyle="bold|italic" android:visibility="gone" />
</LinearLayout>
