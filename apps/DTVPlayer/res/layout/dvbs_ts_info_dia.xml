<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent">

	<LinearLayout
		android:orientation="horizontal" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:layout_marginLeft="20dp"
		android:layout_marginRight="20dp">

		<TextView
			android:layout_width="200px"
			android:textSize="20sp"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:singleLine="true"
			android:textColor="@color/white"
			android:text="@string/item_no"/>
		<TextView
			android:id="@+id/item_no"
			android:layout_width="80px"
			android:textSize="20sp"
			android:textColor="@color/white"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:singleLine="true"/>	
	</LinearLayout>

	
	<LinearLayout
		android:orientation="horizontal" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:layout_marginLeft="20dp"
		android:layout_marginRight="20dp">

		<TextView
			android:layout_width="200px"
			android:textSize="20sp"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:singleLine="true"
			android:textColor="@color/white"
			android:text="@string/ts_frequency"/>
		<TextView android:id="@+id/edittext_frequency"
			android:layout_width="300px"
			android:layout_height="wrap_content"
			android:singleLine="true"
			android:textColor="@color/white"
			android:textSize="20sp"/>
	</LinearLayout>

	
	<LinearLayout
		android:orientation="horizontal" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:layout_marginLeft="20dp"
		android:layout_marginRight="20dp">
		<TextView
			android:layout_width="200px"
			android:textSize="20sp"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:singleLine="true"
			android:textColor="@color/white"
			android:text="@string/ts_polarity"/>

		<TextView
			android:id="@+id/polarization"
			android:layout_width="80px"
			android:textColor="@color/white"
			android:layout_height="wrap_content"
			android:textSize="20sp"
		></TextView>

	</LinearLayout>
    
	<LinearLayout
		android:orientation="horizontal" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:layout_marginLeft="20dp"
		android:layout_marginRight="20dp">
		<TextView
			android:layout_width="200px"
			android:textSize="20sp"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:singleLine="true"
			android:textColor="@color/white"
			android:text="@string/ts_symbol"/>
		<TextView android:id="@+id/edittext_symbol"
			android:layout_width="300px"
			android:layout_height="wrap_content"
			android:singleLine="true"
			android:textColor="@color/white"
			android:textSize="20sp"/>
	</LinearLayout>

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_marginLeft="20dp"
			android:layout_marginRight="20dp">
			 <TextView
			 	android:text="@string/snr"
			 	android:textSize="20sp"
				android:layout_width="70px"
				android:textColor="@color/white" 
				android:layout_height="wrap_content"
				android:layout_weight="1"/>
			<ProgressBar
				android:id="@+id/ProgressBarSNR" 
				android:layout_gravity="center_vertical"
				android:layout_width="wrap_content" 
				android:layout_height="15px"
				style="?android:attr/progressBarStyleHorizontal" 
				android:layout_weight="10"/>
			<TextView  
				android:id="@+id/snr_value"
				android:textSize="20sp"
				android:layout_width="70px" 
				android:textColor="@color/white"
				android:layout_height="wrap_content"
				android:layout_weight="1"/>
		</LinearLayout>
		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_marginLeft="20dp"
			android:layout_marginRight="20dp">
			 <TextView  
			 	android:text="@string/agc"
			 	android:textSize="20sp"
				android:layout_width="70px" 
				android:textColor="@color/white"
				android:layout_height="wrap_content"
				android:layout_weight="1"/>
			<ProgressBar
				android:id="@+id/ProgressBarAGC" 
				android:layout_gravity="center_vertical"
				android:layout_width="wrap_content" 
				android:layout_height="15px"
				style="?android:attr/progressBarStyleHorizontal"
				android:layout_weight="10"/>
			<TextView
				android:id="@+id/agc_value"
				android:layout_width="70px"
				android:textSize="20sp"
				android:textColor="@color/white"
				android:layout_height="wrap_content"
				android:layout_weight="1"/>
		</LinearLayout>
		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_marginLeft="20dp"
			android:layout_marginRight="20dp">
			 <TextView  
			 	android:text="@string/ber"
			 	android:textSize="20sp"
				android:layout_width="70px"
				android:textColor="@color/white" 
				android:layout_height="wrap_content"
				android:layout_weight="1"/>
			<ProgressBar
				android:id="@+id/ProgressBarBER" 
				android:layout_gravity="center_vertical"
				android:layout_width="wrap_content" 
				android:layout_height="15px"
				style="?android:attr/progressBarStyleHorizontal"
				android:layout_weight="10"/>
			<TextView  
				android:id="@+id/ber_value"
				android:textSize="20sp"
				android:layout_width="70px" 
				android:textColor="@color/white"
				android:layout_height="wrap_content"
				android:layout_weight="1"/>
		</LinearLayout>
    	</LinearLayout>

   
</LinearLayout>
 
