<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/source_bt_gap"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@drawable/item_background"
    >
    <ImageView
        android:id="@+id/img_select"
        android:layout_width="@dimen/source_bt_select_width"
        android:layout_height="@dimen/source_bt_select_height"
        android:layout_marginLeft="@dimen/source_bt_select_margin_left"
        />
    <ImageView
        android:id="@+id/img_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/source_bt_icon_margin_left"
        />
    <TextView
        android:id="@+id/tx_source_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/source_bt_name_margin_left"
        android:textSize="@dimen/text_size_source_name"
        />
</LinearLayout>

